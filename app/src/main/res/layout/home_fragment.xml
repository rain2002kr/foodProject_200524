<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_table"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:background="@color/design_default_color_on_secondary"
        app:layout_constraintBottom_toTopOf="@+id/txt_tableNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.61"
        app:srcCompat="@drawable/dinner_table" />

    <TextView
        android:id="@+id/txt_tableNumber"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:ems="10"
        android:gravity="center"
        android:hint="테이블 번호 를 선택 하세요."
        android:inputType="numberDecimal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003" />

    <Button
        android:id="@+id/bt_tableNoEnter"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:text="확 인"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_tableNumber"
        app:layout_constraintStart_toStartOf="@+id/txt_tableNumber"
        app:layout_constraintTop_toBottomOf="@+id/txt_tableNumber" />

    <Spinner
        android:id="@+id/sp_tableNo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:autofillHints="테이블번호를 선택하세요."
        app:layout_constraintEnd_toEndOf="@+id/bt_tableNoEnter"
        app:layout_constraintStart_toStartOf="@+id/bt_tableNoEnter"
        app:layout_constraintTop_toBottomOf="@+id/bt_tableNoEnter" />

</androidx.constraintlayout.widget.ConstraintLayout>