<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"


        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="140dp"
            android:layout_height="180dp">

            <TextView
                android:id="@+id/txtType2_foodName"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="탕수육\n짜장+짜장"
                android:textAlignment="center"
                android:textColor="@color/txtType1_foodNameTextColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.42"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imgType2.food"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="@+id/txtType2_foodName"
                app:layout_constraintStart_toStartOf="@+id/txtType2_foodName"
                app:layout_constraintTop_toBottomOf="@+id/txtType2_foodName"
                app:srcCompat="@drawable/nuddle" />

            <Button
                android:id="@+id/btType2_foodSub1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@color/txtType1_foodPriceBtTextColor"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/txtType2_foodPrice1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/txtType2_foodPrice1"
                app:layout_constraintTop_toBottomOf="@+id/txtType2_foodPrice1" />

            <TextView
                android:id="@+id/btType2_foodCount1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/txtType1_foodPriceTextColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/btType2_foodAdd1"
                app:layout_constraintEnd_toStartOf="@+id/btType2_foodSub1"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/btType2_foodAdd1"
                app:layout_constraintTop_toTopOf="@+id/btType2_foodAdd1" />

            <Button
                android:id="@+id/btType2_foodAdd1"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="+"
                android:textAlignment="center"
                android:textColor="@color/txtType1_foodPriceBtTextColor"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/txtType2_foodPrice1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/txtType2_foodPrice1"
                app:layout_constraintTop_toBottomOf="@+id/txtType2_foodPrice1" />

            <TextView
                android:id="@+id/txtType2_foodPrice1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="6,500(곱)"
                android:textAlignment="center"
                android:textColor="@color/txtType1_foodPriceTextColor"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/imgType2.food"
                app:layout_constraintStart_toStartOf="@+id/imgType2.food"
                app:layout_constraintTop_toBottomOf="@+id/imgType2.food" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>